<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFE0"
    android:padding="16dp">

    <TextView
        android:id="@+id/courseDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details of Sewing as one of the six-month courses"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="135dp"
        android:contentDescription="Company Logo"
        android:src="@drawable/sewing_image" />

    <TextView
        android:id="@+id/courseDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purpose: To provide alterations and new garment tailoring services"
        android:textSize="25dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/courseDetail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Types of stitches, Threading a sewing machine, Sewing buttons; zips; hems; and seams, Alterations, Designing and sewing new garments"
        android:textSize="25dp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="346dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/backButton"
            android:layout_width="150dp"
            android:layout_height="69dp"
            android:textSize="25dp"
            android:backgroundTint="@color/black"
            android:text="Back" />

        <Button
            android:id="@+id/proceedButton"
            android:layout_width="144dp"
            android:layout_height="69dp"
            android:layout_marginStart="16dp"
            android:textSize="25dp"
            android:backgroundTint="@color/black"
            android:text="Proceed" />
    </LinearLayout>

</LinearLayout>
